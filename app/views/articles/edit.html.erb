<%= "Rendering edit.html via articles#edit method" %>

<%= form_for @article do |form| %>
  <p>
  <%= form.label :title %>
  <%= form.text_field :title %>
  </p>

  <p>
  <%= form.label :body %>
  <%= form.text_area :body %>
  </p>

  <%= form.submit %>
  <%# automatically directs request to the update path: article_path(:id) PATCH articles#update %>
<% end %>
