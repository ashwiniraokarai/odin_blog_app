<p>Rendering show.html via articles#show</p>

<p><%= flash.notice %></p>

<div>
  <b><%= @article.title %></b>
  <p><%= @article.body %></p>
  <p><%= link_to "Update article", edit_article_path(@article) %></p>
  <p><%= link_to "Delete article", article_path(@article), method: :delete, data: {confirm: "Sure you want to delete this article?"} %></p>
  <p><%= link_to "Create a new article!", new_article_path %></p>
  <p><%= link_to "Back to index", articles_path %></p>
</div>
<br>
<p> Post your comment here! </p>
<!-- Write a form to post comment -->
<div>
<%=  form_for([@article, @comment]) do |form| %>
  <p><%= form.label :author_name %></p>
  <p><%= form.text_field :author_name %></p>
  <p><%= form.label :body %></p>
  <p><%= form.text_area :body %></p>
  <%= form.submit %>
<% end %>
</div>
<hr>

<p> Comments: </p>

<p><% @article.comments.each do |comment| %></p>
<td>
  <tr>"<%= comment.body %>"</tr>
  <div>
  <tr>Posted by:  <%= comment.author_name %></tr>
  </div>
</td>
<% end %>
