<p>Rendering show.html via articles#show</p>

<div>
  <p><%= flash.notice %></p>
  <p><%= flash.alert %></p>
  <% if @comment.errors.any? %>
    <%= @comment.errors.full_messages do |error| %>
      <%= error %>
    <% end %>
  <% end %>
</div>

<br>
<div>
  <b><%= @article.title %></b>
  <p><%= @article.body %></p>
  <p><%= link_to "Update article", edit_article_path(@article) %></p>
  <p><%= link_to "Delete article", article_path(@article), method: :delete, data: {confirm: "Sure you want to delete this article?"} %></p>
  <p><%= link_to "Create a new article!", new_article_path %></p>
  <p><%= link_to "Back to index", articles_path %></p>
</div>
<br>

